<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F76A6A6A"
    android:fitsSystemWindows="true"
    android:minWidth="19dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F7FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7FFFFFF"

                app:navigationIcon="@drawable/ic_baseline_menu_24"
                app:subtitleTextColor="#FFFFFF"
                app:titleTextColor="#FFFFFF"/>

            <!--    Your code here -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="673dp"
                android:background="@drawable/ovejinmaestro"
                tools:context=".registroalum">

                <Spinner
                    android:id="@+id/sp"
                    android:layout_width="100dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="240dp"
                    android:background="#FFFFFF"
                    android:dropDownSelector="@color/black"
                    android:foregroundTint="#000000"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.017"
                    app:layout_constraintStart_toEndOf="@+id/textView14"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="78dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="404dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Grupo: "
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.351"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="77dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="356dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Grado: "
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.353"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edtam"
                    android:layout_width="267dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#A3A2A2"
                    android:ems="10"
                    android:fontFamily="@font/comfortaa_light"
                    android:hint="Apellido Materno"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#666565"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtap" />

                <EditText
                    android:id="@+id/edtap"
                    android:layout_width="267dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#A3A2A2"
                    android:ems="10"
                    android:fontFamily="@font/comfortaa_light"
                    android:hint="Apellido Paterno"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#666565"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtnombre" />

                <EditText
                    android:id="@+id/edtnombre"
                    android:layout_width="267dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#A3A2A2"
                    android:ems="10"
                    android:fontFamily="@font/comfortaa_light"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    android:textColorHint="#666565"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtmatricula" />

                <EditText
                    android:id="@+id/edtmatricula"
                    android:layout_width="267dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="52dp"
                    android:backgroundTint="#A3A2A2"
                    android:ems="10"
                    android:fontFamily="@font/comfortaa_light"
                    android:hint="Matricula del alumno"
                    android:inputType="textPersonName"

                    android:textColor="#000000"
                    android:textColorHint="#666565"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/edtpass"
                    android:layout_width="164dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="72dp"
                    android:backgroundTint="#A3A2A2"
                    android:enabled="false"
                    android:fontFamily="@font/comfortaa_light"
                    android:hint="Contraseña"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#666565"
                    android:textSize="14dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtam" />

                <Spinner
                    android:id="@+id/sp01"
                    android:layout_width="100dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="12dp"
                    android:background="#FFFFFF"
                    android:contextClickable="true"
                    android:dropDownSelector="@color/black"
                    android:foregroundTint="#000000"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:verticalScrollbarPosition="left"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.016"
                    app:layout_constraintStart_toEndOf="@+id/textView13"
                    app:navigationIcon="@drawable/ic_baseline_menu_book_24"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/btnregist"
                    android:layout_width="175dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="192dp"
                    android:background="@drawable/bordeboton"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Registrar"
                    android:textColor="#fff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.156"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtpass" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fff"
                    android:fontFamily="@font/chelsea_market"
                    android:text="Registro de alumnos"
                    android:textAlignment="center"
                    android:textColor="#333"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="98dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Contraseña:"
                    android:textColor="#000"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/edtpass"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtam" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer_menu">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
