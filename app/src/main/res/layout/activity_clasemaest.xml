<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".clasemaest"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="#F7FFFFFF"
    android:minWidth="19dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F7FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F7FFFFFF"

                app:navigationIcon="@drawable/ic_baseline_menu_24"
                app:subtitleTextColor="#FFFFFF"
                app:titleTextColor="#FFFFFF" />

            <!--    Your code here -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="673dp"
                android:background="@drawable/ovejinmaestro"
                tools:context=".registroalum">


                <Spinner
                    android:id="@+id/spgrupo"
                    android:layout_width="152dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="76dp"
                    android:background="#FFFFFF"
                    android:dropDownSelector="@color/black"
                    android:foregroundTint="#000000"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.645"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/spgrado"
                    tools:visibility="visible" />

                <Spinner
                    android:id="@+id/spgrado"
                    android:layout_width="152dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="76dp"
                    android:background="#FFFFFF"
                    android:contextClickable="true"
                    android:dropDownSelector="@color/black"
                    android:foregroundTint="#000000"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:verticalScrollbarPosition="left"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.645"

                    app:layout_constraintStart_toEndOf="@+id/textView13"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/btnagregarclas"
                    android:layout_width="175dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="52dp"
                    android:textColor="#fff"
                    android:background="@drawable/bordeboton"
                    android:text="Agregar clases"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spmaterias" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="77dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="56dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Grado: "
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.131"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="78dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Grupo: "
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.129"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtmateria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Materias"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <Spinner

                    android:id="@+id/spmaterias"
                    android:layout_width="185dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="36dp"
                    android:background="#FFFFFF"
                    android:dropDownSelector="@color/black"
                    android:foregroundTint="#000000"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.095"
                    app:layout_constraintStart_toEndOf="@+id/txtmateria"
                    app:layout_constraintTop_toBottomOf="@+id/spgrupo"></Spinner>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#fff"
                    android:fontFamily="@font/chelsea_market"
                    android:text="Clases"
                    android:textAlignment="center"
                    android:textColor="#333"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer_menu">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>